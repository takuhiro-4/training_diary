<div class="new_diary">
  <%= link_to '新しい 日記', new_diary_path %>
</div>

<div class="calendar">
  <%= month_calendar events: @diaries do |date, diaries| %>
    <%= date.day %>

    <% diaries.each do |diary| %>
      <div>
        <%= link_to diary.name, diary %>
      </div>
    <% end %>
  <% end %>
</div>

