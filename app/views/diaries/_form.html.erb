<%= form_with(model: diary, local: true) do |form| %>
  <% if diary.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(diary.errors.count, "error") %> prohibited this diary from being saved:</h2>

      <ul>
        <% diary.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "タイトル:" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :content, "内容:" %>
    <%= form.text_area :content, cols: "60", rows: "15" %>
  </div>

  <div class="field">
    <%= form.label :start_time, "記録日:" %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="actions">
    <input type="submit" name="commit" value="　更新　" data-disable-with="　更新　" kl_vkbd_parsed="true" class="send">
  </div>
<% end %>
